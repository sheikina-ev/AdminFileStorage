<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdminFileStorage.Views.SearchPage"
             Title="Поиск"
             BackgroundColor="#1E1E1E">

    <StackLayout Padding="20">
        <!-- Поле для поиска пользователей -->
        <Entry x:Name="SearchEntry"
               Placeholder="Введите имя пользователя"
               TextColor="Black"
               BackgroundColor="White" />
        <Button Text="Найти пользователей"
                Clicked="OnSearchButtonClicked"
                BackgroundColor="#FF0055"
                TextColor="White" />
        <ListView ItemsSource="{Binding Users}" ItemSelected="OnUserSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Username}" TextColor="White"
                          Detail="{Binding Email}" DetailColor="White"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <!-- Поле для поиска файлов -->
        <Entry x:Name="FileSearchEntry"
               Placeholder="Введите название файла"
               TextColor="Black"
               BackgroundColor="White" />
        <Button Text="Найти файлы"
                Clicked="OnSearchFileButtonClicked"
                BackgroundColor="#FF0055"
                TextColor="White" />
        <ListView ItemsSource="{Binding Files}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" TextColor="White"
                              Detail="{Binding Extension}" DetailColor="White" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>

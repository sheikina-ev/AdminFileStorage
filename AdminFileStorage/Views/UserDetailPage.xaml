<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdminFileStorage.Views.UserDetailPage"
             Title="Пользователь"
             BackgroundColor="#1E1E1E">

    <ScrollView>
        <StackLayout Padding="20" Spacing="10">

            <!-- Поля для редактирования пользователя -->
            <Label Text="Фамилия:" TextColor="White" />
            <Entry x:Name="SurnameEntry" 
                   Text="{Binding User.Surname}" 
                   TextColor="White" 
                   BackgroundColor="#333333" />

            <Label Text="Имя:" TextColor="White" />
            <Entry x:Name="NameEntry" 
                   Text="{Binding User.Name}" 
                   TextColor="White" 
                   BackgroundColor="#333333" />

            <Label Text="Никнейм пользователя:" TextColor="White" />
            <Entry x:Name="UsernameEntry" 
                   Text="{Binding User.Username}" 
                   TextColor="White" 
                   BackgroundColor="#333333" />

            <Label Text="Email:" TextColor="White" />
            <Entry x:Name="EmailEntry" 
                   Text="{Binding User.Email}" 
                   TextColor="White" 
                   BackgroundColor="#333333" />

            <Label Text="Телефон:" TextColor="White" />
            <Entry x:Name="PhoneEntry" 
                   Text="{Binding User.Phone}" 
                   TextColor="White" 
                   BackgroundColor="#333333" />

            <!-- Кнопка сохранения изменений -->
            <Button Text="Сохранить изменения"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    Margin="0,10,0,20" />

            <!-- Файлы пользователя -->
            <Label Text="Файлы пользователя"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#A4A4A4"
                   Margin="0,30,0,0"
                   HorizontalTextAlignment="Center" />

            <HorizontalStackLayout x:Name="FilesContainer"
                                   Spacing="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />

        </StackLayout>
    </ScrollView>
</ContentPage>
